#!/usr/bin/env python
import os
import sys
import celery.__main__
BIN_DIR = os.path.abspath(os.path.dirname(__file__))
CCFB_DIR = os.path.dirname(BIN_DIR)
PROJECT_DIR = os.path.dirname(CCFB_DIR)
CONFIG_DIR = os.path.join(CCFB_DIR, 'config')
sys.path.insert(0, CCFB_DIR)        # help finding tasks defined in 'src' package
sys.path.insert(0, CONFIG_DIR)      # help finding 'celeryconfig.py' for pyramid_celery
sys.path.insert(0, PROJECT_DIR)     # help finding tasks defined in 'src' package
os.environ['CELERY_CONFIG_MODULE'] = 'src.config.celeryconfig'


if __name__ == '__main__':
    sys.exit(celery.__main__.main())
